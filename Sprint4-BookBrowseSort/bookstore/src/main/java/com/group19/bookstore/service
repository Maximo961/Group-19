package com.example.bookstore.service;

import com.example.bookstore.models.Book;
import com.example.bookstore.repository.BookRepository;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.List;

@Service
public class BookService {
    @Autowired
    private BookRepository bookRepository;
    public List<Book> getBooksByGenre(String genre) {
        return bookRepository.findBooksByGenre(genre);
    }

    public List<Book> getTopSellers() {
        return bookRepository.findTop10ByOrderByUnitsSoldDesc();
    }

    public List<Book> getBooksByRating(double rating) {
        return bookRepository.findBooksByRating(rating);
    }

    public void discountBooksByPublisher(String publisher, double discountPercentage) {
        List<Book> books = bookRepository.findByPublisher(publisher);
        for (Book book : books) {
            double newPrice = book.getPrice() * (1 - discountPercentage);
            book.setPrice(newPrice);
            bookRepository.save(book);
        }
    }
}
